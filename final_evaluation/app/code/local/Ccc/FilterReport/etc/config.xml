<?xml version="1.0"?>

<config>
    <modules>
        <Ccc_FilterReport>
            <version>1.0.0.2</version>
        </Ccc_FilterReport>
    </modules>
    
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <filterreport before="Mage_Adminhtml">Ccc_FilterReport_Adminhtml</filterreport>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>


    <adminhtml>
        <layout>
            <updates>
                <filterreport>
                    <file>filterreport.xml</file>
                </filterreport>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <filterreport>
                    <file>filterreport.xml</file>
                </filterreport>
            </updates>
        </layout>
    </frontend>
    <global>
        <helpers>
            <filterreport>
                <class>Ccc_FilterReport_Helper</class>
            </filterreport>
        </helpers>
        <blocks>
            <filterreport>
                <class>Ccc_FilterReport_Block</class>
            </filterreport>
            <adminhtml>
                <rewrite>
                    <catalog_product_grid>Ccc_FilterReport_Block_Adminhtml_Catalog_Product_Grid</catalog_product_grid>
                </rewrite>
                <rewrite>
                    <customer_grid>Ccc_FilterReport_Block_Adminhtml_Customer_Grid</customer_grid>
                </rewrite>
            </adminhtml>
        </blocks>
        <models>
            <filterreport>
                <class>Ccc_FilterReport_Model</class>
                <resourceModel>filterreport_resource</resourceModel>
            </filterreport>
            <filterreport_resource>
                <class>Ccc_FilterReport_Model_Resource</class>
                <entities>
                    <report>
                        <table>ccc_filter_report</table>
                    </report>
                </entities>
            </filterreport_resource>
        </models>
        <resources>
            <filterreport_setup>
                <setup>
                    <module>Ccc_FilterReport</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
            </filterreport_setup>
        </resources>
        <events>
            <sales_order_place_after>
                <observers>
                    <update_sort_count>
                        <type>singleton</type>
                        <class>filterreport/observer</class>
                        <method>updateSoldCount</method>
                    </update_sort_count>
                </observers>
            </sales_order_place_after>
        </events>
    </global>
</config>