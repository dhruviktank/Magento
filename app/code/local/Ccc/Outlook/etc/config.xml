<config>
    <modules>
        <Ccc_Outlook>
            <version>1.0.0.2</version>
        </Ccc_Outlook>
    </modules>
    <frontend>
        <routers>
            <Ccc_Outlook>
                <use>standard</use>
                <args>
                    <module>Ccc_Outlook</module>
                    <frontName>outlook</frontName> 
                </args>
            </Ccc_Outlook>
        </routers>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <outlook before="Mage_Adminhtml">Ccc_Outlook_Adminhtml</outlook>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <outlook>
                    <file>outlook.xml</file>
                </outlook>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <blocks>
            <outlook>
                <class>Ccc_Outlook_Block</class>
            </outlook>
        </blocks>
        <models>
            <outlook>
                <class>Ccc_Outlook_Model</class>
                <resourceModel>outlook_resource</resourceModel>
            </outlook>
            <outlook_resource>
                <class>Ccc_Outlook_Model_Resource</class>
                <entities>
                    <configuration>
                        <table>ccc_outlook_configuration</table>
                    </configuration>
                    <email>
                        <table>ccc_outlook_email</table>
                    </email>
                    <attachment>
                        <table>ccc_outlook_attachment</table>
                    </attachment>
                    <event>
                        <table>ccc_outlook_event</table>
                    </event>
                </entities>
            </outlook_resource>
        </models>
        <resources>
            <outlook_setup>
                <setup>
                    <module>Ccc_Outlook</module>
                </setup>
            </outlook_setup>
        </resources>
        <helpers>
            <outlook>
                <class>Ccc_Outlook_Helper</class>
            </outlook>
        </helpers>
    </global>
</config>