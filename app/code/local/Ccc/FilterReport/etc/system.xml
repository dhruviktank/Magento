<config>
    <tabs>
        <filterreport translate="label" module="filterreport">
            <label>Filter Report</label>
            <sort_order>100</sort_order>
        </filterreport>
    </tabs>
    <sections>
        <filterreport translate="label" module="filterreport">
            <label>Report Manager</label>
            <tab>filterreport</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <allow_save_report translate="label">
                            <label>Allow Save Report</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </allow_save_report>
                        <report_page_idle_time>
                            <label>Idle Time for Report Page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>filterreport/system_config_source_idletime</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </report_page_idle_time>
                    </fields>
                </general>
            </groups>
        </filterreport>
    </sections>
</config>